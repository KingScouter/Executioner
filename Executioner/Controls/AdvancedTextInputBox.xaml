<Grid x:Class="Executioner.Controls.AdvancedTextInputBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Executioner.Controls"
    mc:Ignorable="d" 
    GotFocus="StackPanel_GotFocus"
    GotKeyboardFocus="StackPanel_GotKeyboardFocus"
    Focusable="True"
    d:DesignHeight="80" d:DesignWidth="500" >
    <Label x:Name="PrefixLabel" Opacity="0" HorizontalAlignment="Right" />
    <TextBox x:Name="InputTextBox" TextChanged="AdvancedTextInputBox_TextChanged"
        PreviewKeyDown="TextBox_PreviewKeyDown" Background="Transparent" MaxLines="1"/>
</Grid>
