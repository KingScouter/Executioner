<local:BaseParameterInputWindow x:Class="Executioner.InputWindows.CheckboxParameterInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Executioner.InputWindows"
        xmlns:controls="clr-namespace:Executioner.Controls"
        mc:Ignorable="d"
        Title="CheckboxParameterInputWindow" SizeToContent="WidthAndHeight" MinWidth="150"
        PreviewKeyDown="CheckboxParameterInputWindow_PreviewKeyDown">
    <StackPanel>
        <Label x:Name="ParamLabel" Background="Transparent" Content="{Binding InputLabel}"></Label>
        <controls:CustomToggleButton x:Name="ParamCheckBox" HorizontalAlignment="Center"/>
    </StackPanel>
</local:BaseParameterInputWindow>
