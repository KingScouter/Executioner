<Window x:Class="Executioner.InputWindows.TextParameterInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Executioner.InputWindows"
        mc:Ignorable="d"
        Title="TextParameterInputWindow" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" Topmost="True" 
        Background="Transparent" 
        AllowsTransparency="True"
        WindowStyle="None" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" 
        MinWidth="250" MinHeight="60" 
        Deactivated="TextParameterInputWindow_Deactivated"
        KeyDown="TextParameterInputWindow_KeyDown">
    <Border BorderBrush="#CC000000" BorderThickness="1" CornerRadius="15" Padding="15,6,15,6" Background="#CCCCCFDD">
        <StackPanel>
            <Label x:Name="ParamLabel" Background="Transparent" Content="{Binding InputLabel}"></Label>
            <TextBox x:Name="ParamTextBox" Background="Transparent" BorderBrush="{x:Null}" FontSize="24" MaxLines="1" VerticalAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0,0,0,0"/>
        </StackPanel>
    </Border>
</Window>
